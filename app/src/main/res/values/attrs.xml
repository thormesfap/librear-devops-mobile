<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CourseCard">
        <attr name="courseImage" format="reference"/>
        <attr name="courseTitle" format="string"/>
        <attr name="courseRating" format="integer"/>
    </declare-styleable>
    <declare-styleable name="CourseDetailCard">
        <attr name="courseDetailImage" format="reference"/>
        <attr name="courseDetailTitle" format="string"/>
        <attr name="courseDetailDescription" format="string"/>
        <attr name="lessonsAmount" format="integer"/>
        <attr name="readingsAmount" format="integer"/>
    </declare-styleable>
    <declare-styleable name="CourseFollowCard">
        <attr name="courseFollowImage" format="reference"/>
        <attr name="courseFollowTitle" format="string"/>
        <attr name="courseFollowRating" format="integer"/>
        <attr name="courseFollowCompletion" format="integer"/>
        <attr name="courseFollowDate" format="string"/>
    </declare-styleable>
</resources>